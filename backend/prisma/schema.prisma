// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(uuid())
  first_name      String
  last_name       String
  email           String  @unique
  secondary_email String? @unique
  password        String

  refresh_token String?
  verified      Boolean @default(false)

  rsvp     Event?  @relation(name: "rsvp", fields: [event_id], references: [id])
  event_id String? @unique
  events   Event[] @relation(name: "host")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id         String   @id @default(uuid())
  event_name String
  user       User?    @relation(name: "host", fields: [user_id], references: [id])
  user_id    String?
  date       DateTime

  tags            String[] @default([])
  online          Boolean  @default(false)
  available_slots Int?
  rsvp_list       User[]   @relation(name: "rsvp")
  address         Address?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id      Int     @id @default(autoincrement())
  street  String
  suite   String?
  city    String
  state   String
  zipcode String

  event    Event?  @relation(fields: [event_id], references: [id])
  event_id String? @unique
}
